<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite verbose="1" name="Amazon Ios tests" parallel="methods">

    <test name="Check menu functionality">
        <classes>
            <class name="com.solvd.demo.project.MenuTest">
                <methods>
                    <exclude name="subMenuFunctionTest"/>
                </methods>
            </class>
        </classes>
    </test>

    <test name="Check searching product and sorting functionality">
        <classes>
            <class name="com.solvd.demo.project.ios.IosSearchProductTest"/>
        </classes>
    </test>

    <test name="Check filter products functionality">
        <classes>
            <class name="com.solvd.demo.project.ios.IosFilterProductsTest"/>
        </classes>
    </test>

</suite>